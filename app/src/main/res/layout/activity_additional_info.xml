<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegister">

    <LinearLayout
        android:id="@+id/headingLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/Heading"
            android:layout_width="176dp"
            android:layout_height="115dp"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headingLinearLayout" />




    <GridLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:columnCount="3"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">


<!--        <TextView-->
<!--            android:id="@+id/textView10"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:text="TextView" />-->

        <TextView
            android:id="@+id/textView10"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonGPInfo"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="Edit G.P. Details" />

        <TextView
            android:id="@+id/textView11"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonContactInfo"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="Edit Contact Information" />

        <TextView
            android:id="@+id/textView12"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonEmergencyInfo"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="Edit Emergency Contact" />

        <TextView
            android:id="@+id/textView13"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonInsuranceInfo"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="Edit Insurance Information" />

        <TextView
            android:id="@+id/textView14"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonAddMedicalHistory"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:text="Edit Medical History" />

        <TextView
            android:id="@+id/textView15"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"

            android:text="TextView" />

        <Button
            android:id="@+id/ButtonAddMedications"
            android:layout_height="wrap_content"
            android:text="Edit Medications"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="1"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="TextView" />

        <Button
            android:id="@+id/ButtonAdditionalInfo"
            android:layout_height="wrap_content"
            android:text="Edit Additional Info"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnSpan="1"/>



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>